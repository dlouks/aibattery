{
  "name": "aibattery",
  "version": "0.1.0",
  "description": "Battery-style CLI indicator for Claude API usage",
  "type": "module",
  "main": "dist/electron/main.js",
  "bin": {
    "aibattery": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "npm run build && node dist/cli.js",
    "start:simple": "npm run build && node dist/cli.js --simple",
    "tray": "electron electron/main.cjs"
  },
  "dependencies": {
    "electron": "^28.0.0",
    "ink": "^4.1.0",
    "ink-spinner": "^5.0.0",
    "meow": "^11.0.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^3.0.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "typescript": "^5.0.0"
  }
}
